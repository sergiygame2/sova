@model SportApp.Models.DTO.UserDTO

@{
    Layout=null;
    ViewData["Title"] = "Index";
    var usersGyms = (List<Gym>)ViewData["UserGyms"];
}

<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8">
    <meta http-equiv="content-language" content="ru">

    <link href="~/css/bootstrap.css" rel="stylesheet">

    <link href="~/css/styles.css" rel="stylesheet">

</head>

<body>

    <div class="banerprof">
        <div class="container">
            <a href="../Home">
                <img class="logohead" src="~/images/logo.png" height="80px" width="250px">
            </a>
        </div>
        <div id="usernamemy" class="container">
            <div class="text-vertical-center">
                <div class="dropdown">
                    @if(string.IsNullOrEmpty(@Model.FullName))
                    {
                           <button class="dropbtn">@Model.Email</button>
                    }
                    else
                    {
                        <button class="dropbtn">@Model.FullName</button>
                    }
                    <div class="dropdown-content">
                        <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" style="background-color:rgb(245,144,29)">Вийти</button>
                            </form>
                        <a href="../Profile/MyGyms" class="btn btn-dark" style="top:0%"><strong>Збережені зали</strong></a>
                        <a></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <div class="container">
            <h2 id="savedtxt">Збережені зали</h2>

            <div id="manweight" class="container">
                <img src="~/images/weightman.jpg" />
            </div>

            <div class="container">
            <div class="savedgyms">
                <div id="sdcontent" class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="item">
                                <div class="row">
                                    @foreach (var gym in usersGyms)
                                    {
                                        <div class="col-md-4">
                                            <a  href="../gympage/@gym.Id">
                                            <img id="gympic" src="../@gym.GymImgUrl" width="200px" height="200px" />
                                              </a>
                                            <br>
                                            <a href="../gympage/@gym.Id">
                                                <p id="sdgymname" style="text-align:center; max-width:200px;">@gym.GymName</p>
                                            </a>
                                        </div>
                                  
                                    }
                                    </div>
                                </div>
                            </div>
                            <div>
                            </div>
                        </div>
                    </div>
                       </div>

                 </div>
            </div>
</body>
</html>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}