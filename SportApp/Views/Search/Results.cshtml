@{Layout = null; }
@using Newtonsoft.Json

@{
    var serializedGyms = ViewData["gyms"];
    var gyms = JsonConvert.DeserializeObject<List<Gym>>((string)serializedGyms);
}

<html>

<head>

    <title>Результати пошуку</title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8">
    <meta http-equiv="content-language" content="ru">

    <link href="css/bootstrap.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">

    <link href="font-awesome/css/font-awesome.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
    <script src="~/js/Site.js"></script>

</head>

<body>
    <header id="hat" class="header">
        <div class="baner">
        <div class="container">
            <img class="logohead" src="~/Views/../images/logo.png" height="80px" width="250px">
        </div>
        <div class="container">
            <div class="text-vertical-center">
                <a id="signupbtn" href="~/Account/Register" class="btn btn-dark btn-lg">Зареєструватись</a>
                <a id="loginbtn" href="~/Account/Login" class="btn btn-light btn-lg">Увійти</a>
            </div>
            </div>
        </div>

        <div class="container">
            <frameset>
                <div class="greyframe">
                    <iframe  frameborder="0" border="0" width="920px" height="200px">
                          
</iframe>
                    </div>

                <div id="topcont" class="container">
                    <div class="text-vertical-center">
                        <div class="firstrow">
                          <input type="checkbox" class="checkbox" name="trainer" value="trainer">  
                                <h4>Район</h4>
                                <br/>
                                <h4>Вулиця</h4>
                                <br/>
                                <h4>Тренер</h4>     
                        </div> 
                        <div class="secondrow">
                            <h4>Цінова категорія</h4>
                            <br />
                            <br />
                            <h4>Додаткові послуги</h4>  
                        </div>
                    </div>
                </div>
                <div class="emptyframe">
                    <iframe style="border:5px solid orange;" width="920x" height="900px">
                      

                    
                    </iframe>
                </div>
               </frameset>
            
            <div class="container">  
                    <a id="searchnbtn" href="" class="btn btn-light btn-lg" >Шукати</a>
                    <a id="schhomebtn" href="" class="btn btn-dark btn-lg">Шукати біля дому</a>    
            </div>

            <div id="resultstext" class="container">
              <h1>Результати пошуку</h1>
            </div>

            <div class="container">
                <img class="side" src="~/images/girl.jpg" />
            </div>
            <div class="map-container">
                <div id="map-canvas"></div>
            </div>
            
            @foreach (var gym in gyms)
            {
                <h3>@gym.GymName</h3>
            }
        </div>
    </header>
    
</body>
</html>
<footer>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBIwNLNBwCGX66RV_oYm8YUBAyB2Bgz7jQ"></script>
    <script>
        var data = @Html.Raw(serializedGyms);
        alert(data.length);
        var gyms = new Gym();
        gyms = $.extend(data);
        google.maps.event.addDomListener(window, 'load' , initialize(gyms));
    </script>
</footer>
